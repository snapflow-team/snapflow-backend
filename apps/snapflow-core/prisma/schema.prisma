generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ConfirmationStatus {
  Confirmed
  NotConfirmed
}

enum OAuthProvider {
  GOOGLE
  GITHUB
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

model User {
  id Int @id @default(autoincrement())

  username String  @unique @db.VarChar(30)
  email    String  @unique @db.VarChar(255)
  password String? @db.VarChar(255)

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  emailConfirmationCode EmailConfirmationCode?
  sessions              Session[]
  passwordRecoveryCode  PasswordRecoveryCode?
  authAcconts           AuthAccount[]
  posts                 Post[]

  @@map("users")
}

model AuthAccount {
  id Int @id @default(autoincrement())

  providerAccountId String        @map("provider_account_id")
  provider          OAuthProvider
  email             String        @db.VarChar(255)

  updatedAt DateTime  @updatedAt @map("updated_at")
  createdAt DateTime  @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int  @map("user_id")

  @@unique([providerAccountId, provider])
  @@map("auth_accounts")
}

model EmailConfirmationCode {
  id Int @id @default(autoincrement())

  confirmationCode   String?            @unique @map("confirmation_code") @db.VarChar(255)
  expirationDate     DateTime?          @map("expiration_date")
  confirmationStatus ConfirmationStatus @default(NotConfirmed) @map("confirmation_status")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int  @unique @map("user_id")

  @@map("email_confirmation_codes")
}

model Session {
  id         Int      @id @default(autoincrement())
  deviceId   String   @map("device_id")
  deviceName String   @map("device_name") @db.VarChar(255)
  ip         String   @db.VarChar(255)
  iat        DateTime
  exp        DateTime

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int  @map("user_id")

  @@map("sessions")
}

model PasswordRecoveryCode {
  id             Int       @id @default(autoincrement())
  recoveryCode   String?   @unique @map("recovery_code") @db.VarChar(255)
  expirationDate DateTime? @map("expiration_date")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int  @unique @map("user_id")

  @@map("password_recovery_codes")
}

model Post {
  id          Int        @id @default(autoincrement())
  description String?    @db.VarChar(500)
  status      PostStatus @default(DRAFT)

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int         @map("user_id")
  postMedias PostMedia[]

  @@index([userId, createdAt])
  @@map("posts")
}

model PostMedia {
  id       Int    @id @default(autoincrement())
  url      String
  mimeType String @map("mime_type")
  size     Int
  position Int

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int  @map("post_id")

  @@map("post_medias")
}
