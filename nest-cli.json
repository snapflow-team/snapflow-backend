{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/snapflow-backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/snapflow-backend/tsconfig.app.json",
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoFileNameSuffix": [".dto.ts", ".entity.ts"]
        }
      }
    ]
  },
  "monorepo": true,
  "root": "apps/snapflow-backend",
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "snapflow-core": {
      "type": "application",
      "root": "apps/snapflow-core",
      "entryFile": "main",
      "sourceRoot": "apps/snapflow-core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/snapflow-core/tsconfig.app.json"
      }
    }
  }
}
