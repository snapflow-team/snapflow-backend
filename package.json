{
  "name": "snapflow-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build:snapflow-core": "nest build snapflow-core",
    "start:dev:snapflow-core": "cross-env NODE_ENV=development nest start snapflow-core --watch",
    "start:prod:snapflow-core": "cross-env NODE_ENV=production node ./dist/apps/snapflow-core/main.js",
    "start:debug:snapflow-core": "cross-env NODE_ENV=development nest start snapflow-core --debug --watch",
    "test:snapflow-core": "cross-env NODE_ENV=testing jest",
    "test:unit:libs": "cross-env NODE_ENV=testing jest --config ./libs/common/jest-unit.json --runInBand --detectOpenHandles",
    "test:unit:snapflow-core": "cross-env NODE_ENV=testing jest --config ./apps/snapflow-core/test/jest-unit.json --runInBand --detectOpenHandles",
    "test:int:snapflow-core": "cross-env NODE_ENV=testing jest --config ./apps/snapflow-core/test/jest-int.json --runInBand --detectOpenHandles",
    "test:e2e:snapflow-core": "cross-env NODE_ENV=testing jest --config ./apps/snapflow-core/test/jest-e2e.json --runInBand --detectOpenHandles",
    "test:watch:snapflow-core": "cross-env NODE_ENV=testing jest --watch",
    "test:cov:snapflow-core": "cross-env NODE_ENV=testing jest --coverage",
    "test:debug:snapflow-core": "cross-env NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test": "jest",
    "prisma:create-migrate:snapflow-core": "cross-env NODE_ENV=development npx prisma migrate dev --create-only --config=./apps/snapflow-core/prisma.config.ts",
    "prisma:migrate:dev:snapflow-core": "cross-env NODE_ENV=development npx prisma migrate dev --config=./apps/snapflow-core/prisma.config.ts",
    "prisma:migrate:test:snapflow-core": "cross-env NODE_ENV=testing npx prisma migrate dev --config=./apps/snapflow-core/prisma.config.ts",
    "prisma:generate:snapflow-core": "cross-env NODE_ENV=development npx prisma generate --schema=./apps/snapflow-core/prisma/schema.prisma",
    "prisma:generate:prod:snapflow-core": "cross-env NODE_ENV=production npx prisma generate --schema=./apps/snapflow-core/prisma/schema.prisma",
    "prisma:studio:snapflow-core": "cross-env NODE_ENV=development npx prisma studio --schema=./apps/snapflow-core/prisma/schema.prisma",
    "prisma:reset:snapflow-core": "cross-env NODE_ENV=development npx prisma migrate reset --config=./apps/snapflow-core/prisma.config.ts",
    "prisma:deploy:snapflow-core": "cross-env NODE_ENV=production npx prisma migrate deploy --schema=./apps/snapflow-core/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "11.0.1",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.0.1",
    "@nestjs/cqrs": "11.0.3",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "11.0.1",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "@nestlab/google-recaptcha": "^3.11.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@prisma/client-runtime-utils": "^7.3.0",
    "argon2": "^0.44.0",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.3",
    "cookie-parser": "1.4.7",
    "date-fns": "^4.1.0",
    "nodemailer": "^7.0.13",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.17.2",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "swagger-ui-express": "^5.0.1",
    "ua-parser-js": "2.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.18.0",
    "@nestjs/cli": "11.0.0",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "11.0.1",
    "@prisma/config": "^7.3.0",
    "@types/cookie-parser": "1.4.10",
    "@types/express": "5.0.0",
    "@types/jest": "30.0.0",
    "@types/node": "22.10.7",
    "@types/nodemailer": "^7.0.9",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.16.0",
    "@types/supertest": "6.0.2",
    "@types/ua-parser-js": "^0.7.39",
    "cross-env": "10.1.0",
    "dotenv": "17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.2",
    "globals": "16.0.0",
    "jest": "30.0.0",
    "prettier": "3.4.2",
    "prisma": "^7.3.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
